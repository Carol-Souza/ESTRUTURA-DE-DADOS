#include <stdio.h>
#include <stdlib.h>

void main() {
    int n, i,j, valor=0, par=0, impar=0,maior_que = 0, aux, num_impar=0;
    float med;

    int t = 1;

    do{
        printf("Escolha um numero de 1 a 100 \n");
        scanf("%d", &n);
        if(n <= 100){
            t = 0;
        }
        else{
            printf("valor invalido \nTente novamente!");
        }
    }while(t==1);
    

    int array[n];
    for (i = 0; i<n; i++){

        printf("%d ->", i);
        printf("escreva um valor menor que 256\n");
        scanf("%d", &valor);

        if(valor < 256){
            if(valor%2 != 0){
                impar++;
                if(valor >= 50){
                    maior_que += valor;
                    num_impar++;
                }
            }
            else{
                par++;
            }
            
            array[i]=valor;
        }
        else{
            printf("Valor invalido... Tente novamente ;)\n");
            i--;
        }
        
    }
    
    //ordenando o valor
    for (i = 0; i < n; i++) {
        for (j = i; j < n; j++) {
            if(array[i] > array[j]){ // compara se o 1 ponteiro e menor ou n√£o que o ponteiro movel
                //se for realiza a troca com um auxiliar
                aux = array[i];
                array[i] = array[j];
                array[j] = aux;
            }
        }
    }
    printf("Array ordenado\n");
    for(i = 0; i< n; i++){
        printf("%d \n",array[i]);
        printf("--------------------------------------------------\n");
    }
    med = maior_que/num_impar;
    
    printf("Numero de impares e: %d \n",impar);
    printf("Numero de pares e: %d \n",par);
    printf("A media de numeros impares e: %0.1f \n",med);
}

